<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.javagroup.javacapstoneapp">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".activity_disclaimer"></activity>
        <activity android:name=".activity_funders" />
        <activity android:name=".Funders" />
        <activity android:name=".MainActivity" />
        <activity android:name=".FindingYourVoiceActivity" />
        <activity android:name=".NavigatingTheSystemActivity" />
        <activity android:name=".HumanRightsActivity" />
        <activity android:name=".WorkplaceSafetyActivity" />
        <activity android:name=".EmploymentStandardsActivity" />
        <activity
            android:name=".ResourcesActivity"
            android:usesCleartextTraffic="true" />
        <activity android:name=".OccupationalHealthAndSafetyActivity" />
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>