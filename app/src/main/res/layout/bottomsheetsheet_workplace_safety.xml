<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/btm_sheet_workplace_safety"
  android:background="@drawable/bottom_sheet_background"
  app:layout_behavior="@string/bottom_sheet_behavior"
  app:behavior_peekHeight="?actionBarSize"
  style="@style/CoordinatorLayout"
    tools:context=".MainActivity">

    <RelativeLayout
      android:id="@+id/slider"
      android:layout_width="match_parent"
      android:layout_height="20dp">

        <ImageView
          android:id="@+id/slideUpDown"
          android:layout_width="70dp"
          android:layout_height="match_parent"
          android:layout_centerInParent="true"
          android:background="@drawable/slide_up_down" />

    </RelativeLayout>

    <TextView
      android:id="@+id/title_WorkplaceSafety"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginLeft="5dp"
      android:layout_marginTop="45dp"
      android:gravity="center_horizontal"
      android:text="@string/WorkplaceSafetyTxt"
      android:textColor="#0D7D78"
      android:textSize="30dp"
      tools:layout_editor_absoluteX="135dp" />

    <TextView
      android:id="@+id/content_WorkplaceSafety"
      android:layout_width="325dp"
      android:layout_height="142dp"
      android:layout_marginLeft="30dp"
      android:layout_marginTop="25dp"
      android:layout_marginRight="30dp"
      android:gravity="center|center_horizontal"
      android:layout_gravity="center"
      android:text="A safe workplace takes your physical, mental, and emotional safety into consideration. Your safety at work is protected by 3 pieces of legislation:"
      android:textColor="#33817B"
      android:textSize="20dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      tools:layout_editor_absoluteY="58dp" />

    <ImageButton
      android:id="@+id/btn_launchOccupationalHealthAndSafety"
      android:layout_width="293dp"
      android:layout_height="51dp"
      android:layout_marginLeft="50dp"
      android:layout_marginTop="30dp"
      app:srcCompat="@drawable/occupational_health_and_safety"
      android:onClick="launchOccupationalHealthAndSafety"
      />

    <ImageButton
      android:id="@+id/btn_launchEmploymentStandards"
      android:layout_width="298dp"
      android:layout_height="50dp"
      android:layout_marginLeft="50dp"
      android:layout_marginTop="30dp"
      app:srcCompat="@drawable/employment"
      android:onClick="launchEmploymentStandards"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/navigationScreen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="60dp"
                android:background="@drawable/background_image"
                android:orientation="vertical"

                android:translationZ="90dp">

                <TextView
                    android:layout_width="224dp"
                    android:layout_height="89dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginRight="80dp"
                    android:text="Employment Standards"
                    android:textColor="#0D7D78"
                    android:textSize="35dp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="93dp"
                    tools:layout_editor_absoluteY="57dp">

                </TextView>

                <TextView
                    android:layout_width="340dp"
                    android:layout_height="192dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:justificationMode="inter_word"
                    android:text="Employment Standards apply to all workers with a number of exemptions, such as live-in workers, truckers, farm workers and firefighters. The Employment Standards Code establishes Alberta’s minimum standards of employment in areas outside of health and safety that are relevant to the workplace."
                    android:textColor="#33817B"
                    android:textSize="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="146dp">

                </TextView>

                <TextView

                    android:layout_width="340dp"
                    android:layout_height="192dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="30dp"
                    android:text="These include wages, hours of work, overtime, vacation and holidays, leaves and termination of employment. It also establishes the processes in cases where employment standards have not been met, such as wrongful termination of employment Workers and employers in Alberta are subject to the Employment Standards Code and Employment Standards Regulation:"
                    android:textColor="#33817B"
                    android:textSize="20dp"
                    tools:layout_editor_absoluteX="36dp"
                    tools:layout_editor_absoluteY="356dp">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="30dp"
                    android:onClick="alberta_emp_standards"
                    android:text="@string/alberta_employment_standards"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="20dp">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="30dp"
                    android:text="@string/alberta_act"
                    android:onClick="alberta_act"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="20dp">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="30dp"
                    android:text="@string/employment_standard_regulation"
                    android:textColor="@android:color/holo_red_dark"
                    android:onClick="emp_standard_regulation"
                    android:textSize="20dp">

                </TextView>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/case_study_link1">

                </Button>

            </LinearLayout>
        </ScrollView>

        <ImageButton
            android:id="@+id/openNav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/navigation_button_container"
            android:contentDescription="@string/not_found"
            android:paddingStart="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:paddingEnd="35dp"
            android:paddingRight="35dp"
            android:paddingBottom="15dp"
            android:src="@drawable/icon_hamburger"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_anchor="@+id/navigationScreen"
            app:layout_anchorGravity="center" />
    </LinearLayout>

    <ImageButton
      android:id="@+id/btn_launchHumanRights"
      android:layout_width="298dp"
      android:layout_height="54dp"
      android:layout_marginLeft="50dp"
      android:layout_marginTop="30dp"
      app:srcCompat="@drawable/human_rights"
      android:onClick="launchHumanRights"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/navigationScreen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="60dp"
                android:background="@drawable/background_image"
                android:orientation="vertical"

                android:translationZ="90dp">

                <TextView
                    android:layout_width="224dp"
                    android:layout_height="89dp"
                    android:layout_marginLeft="85dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginRight="80dp"
                    android:text="Human Rights"
                    android:textColor="#0D7D78"
                    android:textSize="35dp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="93dp"
                    tools:layout_editor_absoluteY="57dp">

                </TextView>

                <TextView
                    android:layout_width="340dp"
                    android:layout_height="192dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:justificationMode="inter_word"
                    android:text="In addition to workplace safety, hazards, rights, and standards, Alberta has legislation that relates to the rights of all people and their dignity, regardless of background such as ethnocultural group, source of income, participation in a labour union, gender, age, sexual orientation, or immigration status: "
                    android:textColor="#33817B"
                    android:textSize="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="146dp">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="30dp"
                    android:text="@string/hr_acts"
                    android:onClick=""
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="20dp">

                </TextView>

                <TextView
                    android:layout_width="340dp"
                    android:layout_height="192dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:justificationMode="inter_word"
                    android:text="Human Rights in Alberta relate to the idea that everyone should be free from discrimination, and apply to employers and workers. Employers cannot sign away their employees’ human rights. In cases of human rights breaches, specific steps need to be taken. "
                    android:textColor="#33817B"
                    android:textSize="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="146dp">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="30dp"
                    android:text="@string/hr_commission"
                    android:onClick=""
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="20dp">

                </TextView>


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/case_study_link1">

                </Button>

            </LinearLayout>
        </ScrollView>

        <ImageButton
            android:id="@+id/openNav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/navigation_button_container"
            android:contentDescription="@string/not_found"
            android:paddingStart="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:paddingEnd="35dp"
            android:paddingRight="35dp"
            android:paddingBottom="15dp"
            android:src="@drawable/icon_hamburger"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_anchor="@+id/navigationScreen"
            app:layout_anchorGravity="center" />
    </LinearLayout>

</LinearLayout>