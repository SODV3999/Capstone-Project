<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/btm_sheet_resources"
  android:background="@drawable/bottom_sheet_background"
  app:layout_behavior="@string/bottom_sheet_behavior"
  app:behavior_peekHeight="200sp"
    app:behavior_hideable="true"
    android:layout_height="700sp"
  style="@style/CoordinatorLayout">


  <RelativeLayout
      android:id="@+id/slider"
      android:layout_width="match_parent"
      android:layout_height="200sp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="35dp"
        >

      <ImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:src="@drawable/header_hdpi"
          android:background="#FF0A7F91"
          android:paddingTop="1dp"
          android:paddingBottom="1dp"
          />
      <ImageView
          android:id="@+id/slideUpDownWorkPlaceSafety"
          android:layout_width="70dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:background="@drawable/slide_up_down"
          android:contentDescription="TopImage" />

      <TextView
          android:id="@+id/btm_sheet_title_Resource"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginLeft="5dp"
          android:layout_marginTop="10dp"
          android:gravity="center_horizontal"
          android:textColor="#0D7D78"
          android:textSize="30dp"
          android:textStyle="bold"
          tools:layout_editor_absoluteX="135dp"
          />

    </androidx.cardview.widget.CardView>


  </RelativeLayout>


  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <TextView
        android:id="@+id/content_Resource"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:gravity="center|center_horizontal"
        android:textColor="#33817B"
        android:textSize="20dp" />

      <TextView
        android:id="@+id/title_Alberta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:textColor="#0D7D78"
        android:textSize="25dp">

      </TextView>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginEnd="30dp">

        <!--            <ImageView-->
        <!--                android:id="@+id/imageView4"-->
        <!--                android:layout_width="wrap_content"-->
        <!--                android:layout_height="wrap_content"-->
        <!--                android:layout_alignParentStart="true"-->
        <!--                android:layout_alignParentLeft="true"-->
        <!--                android:layout_alignParentBottom="true"-->
        <!--                android:layout_marginStart="145dp"-->
        <!--                android:layout_marginLeft="145dp"-->
        <!--                android:layout_marginBottom="23dp"-->
        <!--                app:srcCompat="@drawable/line" />-->


        <ImageButton
          android:id="@+id/imageButton_call_1"
          android:layout_width="0dp"
          android:layout_height="50dp"
          android:layout_weight="1"
          android:scaleType="fitCenter"
          android:background="@android:color/transparent"
          app:srcCompat="@drawable/phone"
          />

        <ImageButton
          android:id="@+id/imageButton_link1"
          android:layout_width="0dp"
          android:layout_height="50dp"
          android:layout_weight="1"
          app:srcCompat="@drawable/link"
          android:scaleType="fitCenter"
          android:background="@android:color/transparent"/>
      </LinearLayout>

      <TextView
        android:id="@+id/title_calgary_workers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:textColor="#0D7D78"
        android:textSize="25dp"
        >
      </TextView>
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginEnd="30dp">

        <ImageButton
          android:id="@+id/imageButton_call_2"
          android:layout_width="0dp"
          android:layout_height="50dp"
          android:layout_weight="1"
          android:scaleType="fitCenter"
          android:background="@android:color/transparent"
          app:srcCompat="@drawable/phone"
          />

        <ImageButton
          android:id="@+id/imageButton_link2"
          android:layout_width="0dp"
          android:layout_height="50dp"
          android:layout_weight="1"
          app:srcCompat="@drawable/link"
          android:scaleType="fitCenter"
          android:background="@android:color/transparent"/>

      </LinearLayout>

      <TextView
        android:id="@+id/content_resources_continuation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textColor="#33817B"
        android:textSize="20dp">

      </TextView>

      <Button
        android:id="@+id/btn_funders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/funders"
        android:onClick="launchFunders"
          android:layout_gravity="center_horizontal">

      </Button>
      <Button
        android:id="@+id/btn_disclaimer"
        android:onClick="launchDisclaimers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/disclaimer"
          android:layout_gravity="center_horizontal">

      </Button>

    </LinearLayout>

  </ScrollView>




</LinearLayout>