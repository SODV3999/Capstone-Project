<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp"

        android:id="@+id/casestudy3">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/imgcasestudy1"
                android:layout_height="200dp"
                android:src="@drawable/header_hdpi"/>
            <TextView
                android:id="@+id/myImageViewText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/imgcasestudy1"
                android:layout_alignTop="@+id/imgcasestudy1"
                android:layout_alignRight="@+id/imgcasestudy1"
                android:layout_alignBottom="@+id/imgcasestudy1"
                android:layout_margin="1dp"
                android:gravity="center"
                android:text="Case Study 3"
                android:textStyle="italic"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30dp"/>
        </RelativeLayout>


        <TextView
            android:layout_width="370dp"
            android:layout_height="165dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="40dp"
            android:text="                              Option 1\nlorem ipsum dolor sit amet, consectetur adipscing elit.fuse id sapien lectre epid\n

                         Explanation\nlorem ipsum dolor sit amet, consetour displining elit fuse d saplen lectre"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />

        <RelativeLayout
            android:id="@+id/c31"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >




            <Button
                android:id="@+id/cs3button1"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="#ffffff"
                android:textColor="@color/colorPrimary"
                android:text="Finding Your Voice"
                android:onClick="launchFindingyourvoice"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/cs3button1"
                android:text=""
                android:background="@drawable/custom_bg"
                />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/c32"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >




            <Button
                android:id="@+id/cs3button2"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:textColor="@color/colorPrimary"
                android:background="#ffffff"
                android:text="See Human Rights"
                android:onClick="launchHumanRights"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/cs3button2"
                android:text=""
                android:background="@drawable/custom_bg"
                />

        </RelativeLayout>





    </LinearLayout>

</LinearLayout>