<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <!--
        NOTE: For now it is only suitable for Pixel 3XL device.
        TODO: Make the navigation responsive to all devices
    -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/navigationScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/navigation_button_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/nav_close_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/nav_menu_border"
            android:gravity="center|start"
            android:padding="20dp"
            android:text="@string/web_btn_close"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/btn_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/nav_menu_border"
            android:padding="20dp"
            android:paddingStart="20dp"
            android:paddingLeft="20dp"
            android:paddingEnd="0dp"
            android:paddingRight="0dp"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nav_close_button" />

        <TextView
            android:id="@+id/btn_finding_your_voice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/nav_menu_border"
            android:padding="20dp"
            android:paddingStart="20dp"
            android:paddingLeft="20dp"
            android:paddingEnd="0dp"
            android:paddingRight="0dp"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_home" />

        <TextView
            android:id="@+id/btn_know_your_rights"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:paddingStart="20dp"
            android:paddingLeft="20dp"
            android:paddingEnd="0dp"
            android:paddingRight="0dp"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_finding_your_voice" />

        <TextView
            android:id="@+id/btn_es"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_subdirectory_arrow_right_white_24dp"
            android:drawableStart="@drawable/ic_subdirectory_arrow_right_white_24dp"
            android:paddingStart="50dp"
            android:paddingLeft="50dp"
            android:paddingTop="10dp"
            android:paddingEnd="0dp"
            android:paddingRight="0dp"
            android:textColor="@color/menu_text_color"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_know_your_rights"/>

        <TextView
            android:id="@+id/btn_hr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_subdirectory_arrow_right_white_24dp"
            android:drawableStart="@drawable/ic_subdirectory_arrow_right_white_24dp"
            android:paddingStart="50dp"
            android:paddingLeft="50dp"
            android:paddingTop="10dp"
            android:paddingEnd="0dp"
            android:paddingRight="0dp"
            android:textColor="@color/menu_text_color"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_es" />

        <TextView
            android:id="@+id/btn_ohs"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:background="@drawable/nav_menu_border"
            android:drawableStart="@drawable/ic_subdirectory_arrow_right_white_24dp"
            android:drawableLeft="@drawable/ic_subdirectory_arrow_right_white_24dp"
            android:paddingStart="50dp"
            android:paddingLeft="50dp"
            android:paddingTop="10dp"
            android:paddingEnd="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="20dp"
            android:textColor="@color/menu_text_color"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_hr" />

        <TextView
            android:id="@+id/btn_resources"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:background="@drawable/nav_menu_border"
            android:padding="20dp"
            android:paddingStart="20dp"
            android:paddingLeft="20dp"
            android:paddingEnd="0dp"
            android:paddingRight="0dp"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_ohs" />

        <RelativeLayout
            android:id="@+id/linearLayout"
            android:layout_width="383dp"
            android:layout_height="79dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_resources">

            <TextView
                android:id="@+id/btn_fund"
                android:background="@drawable/nav_menu_border"
                android:layout_width="125dp"
                android:layout_height="114dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="1dp"
                android:gravity="center"
                android:textColor="@color/menu_text_color"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/btn_disclaimer"
                android:layout_width="214dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="44dp"
                android:layout_marginRight="44dp"
                android:background="@drawable/navigation_fund_disclaimer_container"
                android:gravity="center"
                android:textColor="@color/menu_text_color"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/btn_fund"
                app:layout_constraintStart_toEndOf="@+id/btn_fund"
                app:layout_constraintTop_toTopOf="@+id/btn_fund" />

        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>