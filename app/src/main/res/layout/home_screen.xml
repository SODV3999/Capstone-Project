<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView3_nigam"
        android:layout_width="411dp"
        android:layout_height="252dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_capstone" />

    <ImageButton
        android:id="@+id/imageButton_nigam"
        android:layout_width="390dp"
        android:layout_height="115dp"
        app:layout_constraintBottom_toTopOf="@+id/imageButton5_nigam"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3_nigam"
        app:srcCompat="@drawable/safety" />

    <ImageButton
        android:id="@+id/imageButton4_nigam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="44dp"
        android:layout_marginRight="44dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView3_nigam"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <ImageButton
        android:id="@+id/imageButton5_nigam"
        android:layout_width="390dp"
        android:layout_height="115dp"
        app:layout_constraintBottom_toTopOf="@+id/imageButton7_nigam"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton_nigam"
        app:srcCompat="@drawable/safety" />

    <ImageButton
        android:id="@+id/imageButton7_nigam"
        android:layout_width="390dp"
        android:layout_height="115dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageButton5_nigam"
        app:srcCompat="@drawable/voice" />
</androidx.constraintlayout.widget.ConstraintLayout>